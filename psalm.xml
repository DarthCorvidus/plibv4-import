<?xml version="1.0"?>
<psalm
    errorLevel="1"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="true"
    findUnusedCode="false"
>
	<issueHandlers>
		<!-- deliberate choice to keep most classes un-final -->
		<ClassMustBeFinal>
			<errorLevel type="suppress">
				<directory name="src" />
			</errorLevel>
		</ClassMustBeFinal>
		<MixedArrayAssignment>
			<errorLevel type="suppress">
				<file name="src/Import.php" />
			</errorLevel>
		</MixedArrayAssignment>
		<MixedArgument>
			<errorLevel type="suppress">
				<file name="src/Import.php" />
			</errorLevel>
		</MixedArgument>
		<MixedAssignment>
			<errorLevel type="suppress">
				<file name="src/Import.php" />
			</errorLevel>
		</MixedAssignment>
		<MixedArgumentTypeCoercion>
			<errorLevel type="suppress">
				<file name="src/Import.php" />
			</errorLevel>
		</MixedArgumentTypeCoercion>
		<PropertyTypeCoercion>
			<errorLevel type="suppress">
				<file name="src/Import.php" />
			</errorLevel>
		</PropertyTypeCoercion>
	</issueHandlers>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>
</psalm>
